{
  "name": "electron-parcel-example",
  "productName": "ElectronParcel",
  "author": "Frederik De Bleser",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently -k 'yarn run electron-dev' 'yarn run parcel-dev'",
    "electron-dev": "NODE_ENV=development electron .",
    "parcel-dev": "parcel serve -d build src/ui/index.html",
    "parcel-build": "parcel build -d build -t electron --public-url . src/ui/index.html",
    "dist": "rm -rf dist && npm run parcel-build && electron-builder build ",
    "format": "prettier --write **/*.js **/*.css"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "5.0.2",
    "electron": "7.1.7",
    "electron-builder": "21.2.0",
    "parcel-bundler": "1.12.4"
  },
  "dependencies": {
    "app.css": "0.1.2",
    "global.css": "1.1.0",
    "nativize.css": "0.2.0",
    "preact": "10.1.1"
  },
  "build": {
    "appId": "be.debleser.electronParcelExample",
    "files": [
      "main.js",
      "build/",
      "assets/"
    ]
  }
}
